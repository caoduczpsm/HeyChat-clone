<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_user"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/profile"/>


    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/image_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/user_name_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/typeCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name_call"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="incoming"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/space"
            android:layout_toEndOf="@id/typeCall"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name_call"
            android:text=" - "
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/secondary_text"/>

        <TextView
            android:id="@+id/timeCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name_call"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_toEndOf="@id/space"
            android:text="time"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/_10ssp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/image_type_call"
        android:padding="@dimen/_8sdp"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_video_call"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_2sdp" />

</RelativeLayout>